<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="yes"
    tools:context=".BmiCalculator">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI Calculator"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="18dp"
            android:background="#340342"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:src="@drawable/bmi_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your weight?"
            android:textSize="20dp"
            android:textColor="@color/darkBlue"
            android:paddingTop="50dp"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/ediWeight"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/weight"
            android:gravity="right|center_vertical"
            android:hint="Enter your weight (Kg)"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="16dp"
            android:textColorHint="@color/darkBlue" />

        <TextView
            android:id="@+id/ediHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your height?"
            android:textSize="20dp"
            android:textColor="@color/darkBlue"
            android:paddingTop="20dp"
            android:paddingLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20">

        <EditText
            android:id="@+id/ediFeet"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="right|center_vertical"
            android:background="@drawable/height1"
            android:hint="height (Feet)"
            android:paddingHorizontal="11dp"
            android:layout_weight="10"
            android:inputType="numberDecimal"
            android:textColorHint="@color/darkBlue" />
        
        <EditText
            android:id="@+id/ediInch"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="right|center_vertical"
            android:background="@drawable/height1"
            android:hint="height (Inch)"
            android:paddingHorizontal="11dp"
            android:layout_weight="10"
            android:inputType="numberDecimal"
            android:textColorHint="@color/darkBlue" />

    </LinearLayout>

        <Button
            android:id="@+id/buttonBmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:text="Calculate your BMI"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/darkBlue"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp" />


        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/bmicard"
            android:layout_marginTop="30dp"
            android:padding="24dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@color/darkBlue">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/homeicon" />

            <ImageView
                android:id="@+id/dietIcon"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/dieticcon" />

            <ImageView
                android:id="@+id/stepsIcon"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/stepicon" />

            <ImageView
                android:id="@+id/bmiIcon"
                android:layout_width="97dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/bmiicon" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
