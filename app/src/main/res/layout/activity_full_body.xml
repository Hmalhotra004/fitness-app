<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UpperBodyActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Upper Body"
        android:background="@color/darkBlue"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/fullpg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/full1"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/fullbody_1" />

                <ImageView
                    android:id="@+id/full2"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/fullbody_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/full3"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/fullbody_3" />

                <ImageView
                    android:id="@+id/full4"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/fullbody_4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/full5"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/fullbody_5" />

                <ImageView
                    android:id="@+id/full6"
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/fullbody_6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
