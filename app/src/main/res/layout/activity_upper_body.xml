<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UpperBodyActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Upper Body"
        android:background="@color/darkBlue"
        app:titleTextColor="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:src="@drawable/upperpg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/upper1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/upper2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/upper3" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/upper4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/upper5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="253dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/upper6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
