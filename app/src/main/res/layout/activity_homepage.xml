<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homepage">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:background="#3E044B" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="317dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/main_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Programs"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card1"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/card2" />

                    <ImageView
                        android:id="@+id/card2"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/card1" />

                    <ImageView
                        android:id="@+id/card3"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/card3" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/imageView7"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                app:srcCompat="@drawable/dots" />

            <ImageView
                android:id="@+id/bmiCard"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:paddingHorizontal="10dp"
                app:srcCompat="@drawable/bmicard" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/darkBlue"
        android:padding="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/homeicon" />

        <ImageView
            android:id="@+id/dietIcon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/dieticcon" />

        <ImageView
            android:id="@+id/stepsIcon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/stepicon" />

        <ImageView
            android:id="@+id/bmiIcon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/bmiicon" />
    </LinearLayout>
</LinearLayout>
